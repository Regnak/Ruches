# coding: utf-8
#:kivy 1.9.1

<Rucher>:
    _gridRuche: grid_ruche.__self__
    _gridSuppr: gridSuppr.__self__
    _blButton: blButton.__self__
    _buttonChoixRuche: buttonChoixRuche.__self__
    _buttonChoixRuche2: buttonChoixRuche2.__self__

    canvas:
        Rectangle:
            pos: self.center_x - (self.width/2), self.center_y-(self.height/3)
            size: self.width, 0

    GridLayout:
        id: grid_ruche
        cols: 4
        size: root.width, root.height-(root.center_y-(root.height/3))
        top: root.y
        pos: root.x, root.center_y-(root.height/3)+10

    GridLayout:
        id: gridSuppr
        cols: 4
        size: root.width, root.height
        top: root.y
        pos: root.x, root.center_y-(root.height/2)

    BoxLayout:
        id: blButton
        orientation: "horizontal"
        width: root.width
        Button:
            id: btn_1
            text: 'Ajouter une ruche'
            on_press: root.addRuche()
            on_release: print("choix ajout ruche...")
            on_state:
                print("mycurrent state is {}".format(self.state))

        Button:
            id: btn_2
            text: 'Supprimer une ruche'
            on_press: root.delRuche()
            on_release: print("le rucher est supprimée...")
            on_state:
                print("mycurrent state is {}".format(self.state))

        Button:
            id: btn_3
            text: 'Retour'
            on_press: root.closeRucher()
            on_release: print("le rucher est supprime...")
            on_state:
                print("mycurrent state is {}".format(self.state))

    BoxLayout:
        id: buttonChoixRuche
        orientation: "horizontal"
        width: root.width
        Button:
            id: btn_1
            text: 'Ajouter nouvelle ruche'
            on_press: root.addNewRuche()
            on_release: print("nouvelle ruche ajoutée...")
            on_state:
                print("mycurrent state is {}".format(self.state))

    BoxLayout:
        id: buttonChoixRuche2
        orientation: "horizontal"
        width: root.width
        Button:
            id: btn_1
            text: 'Supprimer la ruche'
            on_press: root.defDelRuche()
            on_release: print("nouvelle ruche ajoutée...")
            on_state:
                print("mycurrent state is {}".format(self.state))
